<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#15151B">

    <ImageView
        android:id="@+id/imgMonSheet"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvTenMonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tên món"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGiaMonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="25,000 đ"
        android:textColor="#FFB74D"
        android:textSize="14sp" />

    <!-- Chọn số lượng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnGiamSheet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_button"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Giảm" />

        <TextView
            android:id="@+id/tvSoLuongSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnTangSheet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_button"
            android:src="@android:drawable/ic_media_next"
            android:tint="@android:color/white"
            android:contentDescription="Tăng" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvThanhTienSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Thành tiền: 25,000 đ"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnThemGioSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thêm vào giỏ"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="#FFB74D" />

    <Button
        android:id="@+id/btnXoaMonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Xóa món này khỏi giỏ"
        android:textAllCaps="false"
        android:textColor="#FF5252"
        android:backgroundTint="#272733" />

</LinearLayout>
