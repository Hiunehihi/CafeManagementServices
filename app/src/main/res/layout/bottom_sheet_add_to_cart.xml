<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- drag handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_drag_handle"
        android:alpha="0.35" />

    <ImageView
        android:id="@+id/imgMonSheet"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tvTenMonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tên món"
        android:textColor="@color/on_surface"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGiaMonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Giá"
        android:textColor="@color/textSecondary"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnGiamSheet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_button"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@color/on_surface"
            android:contentDescription="Giảm" />

        <TextView
            android:id="@+id/tvSoLuongSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="1"
            android:textColor="@color/on_surface"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btnTangSheet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_button"
            android:src="@android:drawable/ic_media_next"
            android:tint="@color/on_surface"
            android:contentDescription="Tăng" />

        <TextView
            android:id="@+id/tvThanhTienSheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Thành tiền: 0 đ"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnThemGioSheet"
        style="@style/Widget.Cafe.PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thêm vào giỏ" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnXoaMonSheet"
        style="@style/Widget.Cafe.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xóa món"
        android:textColor="@color/textSecondary" />

</LinearLayout>
